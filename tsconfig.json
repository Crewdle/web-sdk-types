{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "lib": ["es6", "dom", "esnext.asynciterable", "ES2018.AsyncGenerator"],

    /* Modules */
    "module": "esnext",
    "moduleResolution": "Node",
    "baseUrl": "src/",

    /* Emit */
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src"],
}
